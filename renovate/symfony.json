{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate preset for Symfony projects",
  "extends": [
    "github>marcel-tuinstra/devops:renovate/default"
  ],
  "packageRules": [
    {
      "description": "Group Symfony packages",
      "matchPackagePatterns": ["^symfony/"],
      "groupName": "symfony"
    },
    {
      "description": "Group Doctrine packages",
      "matchPackagePatterns": ["^doctrine/"],
      "groupName": "doctrine"
    },
    {
      "description": "Group PHPStan packages",
      "matchPackagePatterns": ["^phpstan/"],
      "groupName": "phpstan"
    },
    {
      "description": "Group PHP-CS-Fixer and coding standards",
      "matchPackagePatterns": ["^friendsofphp/php-cs-fixer", "^symplify/"],
      "groupName": "coding-standards"
    },
    {
      "description": "Group API Platform packages",
      "matchPackagePatterns": ["^api-platform/"],
      "groupName": "api-platform"
    }
  ]
}
